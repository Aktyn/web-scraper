{
  "name": "@web-scraper/desktop-app",
  "version": "2.0.0",
  "description": "Project created to better automate web operations. It can be used for advanced website testing, data mining, scraping, and more.",
  "main": "./dist/main.js",
  "private": true,
  "author": "Rados≈Çaw Krajewski (Aktyn) <aktyn3@gmail.com>",
  "homepage": "https://github.com/Aktyn/web-scrapers#readme",
  "scripts": {
    "dist": "cross-env yarn run build && electron-builder",
    "electron:pack": "cross-env DEBUG=electron-builder yarn run build && electron-builder --config electron-builder.yml --dir",
    "electron:rebuild": "yarn rebuild --runtime=electron --target=23.1.4 --disturl=https://atom.io/download/atom-shell --abi=114",
    "electron:installDeps": "electron-builder install-app-deps --arch=x64",
    "build": "tsc -p ./tsconfig.json",
    "prebuild": "prisma generate",
    "start": "electron ./dist/main.js",
    "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"yarn run build && yarn run start || exit 1\" -e ts",
    "db:generate": "prisma generate",
    "db:generate:reset": "cross-env yarn run db:generate && shx rm -f ./external/data.db && shx touch ./external/data.db && prisma migrate resolve --applied 0_init && prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:format": "prisma format",
    "db:seed": "prisma db seed",
    "db:reset:seed": "cross-env yarn run db:generate:reset && yarn run db:seed",
    "db:studio": "prisma studio --port 5555",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:ci": "jest",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@prisma/generator-helper": "^6.2.1",
    "@web-scraper/common": "workspace:*",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "electron": "33.3.1",
    "ghost-cursor": "^1.3.0",
    "puppeteer": "^24.0.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "random-useragent": "^0.5.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/random-useragent": "^0.3.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "prisma-erd-generator": "^1.11.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
