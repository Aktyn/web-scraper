{
  "name": "@web-scrapper/desktop-app",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/main.js",
  "private": true,
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "prebuild": "prisma generate",
    "start": "electron ./dist/main.js",
    "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"npm run build && npm run start\" -e ts",
    "db:generate": "prisma generate",
    "db:format": "prisma format",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "test:ci": "vitest --coverage --threads=false --watch=false --reporter=default --reporter=junit",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "eslint src/**/*.ts --fix",
    "env": "cp ./example.env ./.env"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@web-scrapper/common": "^1.0.0",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "electron": "^23.0.0",
    "electron-is-dev": "^2.0.0",
    "sqlite3": "^5.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vitest/coverage-c8": "^0.28.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prisma": "^4.10.1",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  }
}
