{
  "name": "@web-scraper/desktop-app",
  "version": "1.0.0",
  "description": "Project created to better automate web operations. It can be used for advanced website testing, data mining, scraping, and more.",
  "main": "./dist/main.js",
  "private": true,
  "author": "Rados≈Çaw Krajewski (Aktyn) <aktyn3@gmail.com>",
  "homepage": "https://github.com/Aktyn/web-scrapers#readme",
  "scripts": {
    "dist": "cross-env yarn run build && electron-builder",
    "electron:pack": "cross-env DEBUG=electron-builder yarn run build && electron-builder --config electron-builder.yml --dir",
    "electron:rebuild": "yarn rebuild --runtime=electron --target=23.1.4 --disturl=https://atom.io/download/atom-shell --abi=114",
    "electron:installDeps": "electron-builder install-app-deps --arch=x64",
    "build": "tsc -p ./tsconfig.json",
    "prebuild": "prisma generate",
    "start": "electron ./dist/main.js",
    "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"yarn run build && yarn run start\" -e ts || exit 1",
    "db:generate": "prisma generate",
    "db:generate:reset": "cross-env yarn run db:generate && shx rm -f ./external/data.db && shx touch ./external/data.db && prisma migrate resolve --applied 0_init && prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:format": "prisma format",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio --port 5555",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "test:ci": "vitest --coverage --threads=false --watch=false --reporter=default --reporter=junit",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "eslint src/**/*.ts --fix",
    "env": "shx cp ./example.env ./.env",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.14.1",
    "@prisma/generator-helper": "^4.14.1",
    "@web-scraper/common": "^1.0.0",
    "dotenv": "^16.1.4",
    "dotenv-expand": "^10.0.0",
    "electron-is-dev": "^2.0.0",
    "puppeteer": "^20.4.0",
    "random-useragent": "^0.5.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.1.0",
    "@types/random-useragent": "^0.3.1",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitest/coverage-c8": "^0.31.1",
    "cross-env": "^7.0.3",
    "electron": "25.0.1",
    "electron-builder": "^23.6.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prisma": "^4.15.0",
    "prisma-erd-generator": "^1.7.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.31.4",
    "vitest-mock-extended": "^1.1.3"
  }
}
