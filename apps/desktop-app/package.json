{
  "name": "@web-scrapper/desktop-app",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/main.js",
  "private": true,
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "prebuild": "prisma generate",
    "start": "electron ./dist/main.js",
    "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"npm run build && npm run start\" -e ts",
    "db:generate": "prisma generate",
    "db:generate:reset": "cross-env npm run db:generate && shx rm -f ./external/main.db && shx touch ./external/main.db && prisma migrate resolve --applied 0_init && prisma db push",
    "db:migrate": "prisma migrate dev --name database_structure_changes",
    "db:format": "prisma format",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio --port 5555",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "test:ci": "vitest --coverage --threads=false --watch=false --reporter=default --reporter=junit",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "eslint src/**/*.ts --fix",
    "env": "shx cp ./example.env ./.env"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@web-scrapper/common": "^1.0.0",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "electron": "^23.1.2",
    "electron-is-dev": "^2.0.0",
    "puppeteer": "^19.7.2",
    "random-useragent": "^0.5.0",
    "sqlite3": "^5.1.4"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.0.0",
    "@types/random-useragent": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitest/coverage-c8": "^0.29.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.21",
    "prisma": "^4.11.0",
    "prisma-erd-generator": "^1.2.5",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2",
    "vitest-mock-extended": "^1.0.9"
  }
}
