{
  "name": "@web-scraper/backend",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "dev": "tsx --watch src/index.ts | pino-pretty --colorize",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*{.ts,.tsx}\" --fix",
    "typecheck": "tsc --noEmit --skipLibCheck -p ./tsconfig.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:generate-erd": "drizzle-erd --in ./src/db/schema/index.ts --out ERD.svg",
    "db:reset": "rm -rf data.db && npm run db:generate && npm run db:migrate && npm run db:generate-erd",
    "db:reset:seed": "npm run db:reset && tsx src/db/seed/auto-seed.ts",
    "db:show": "drizzle-kit studio"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@libsql/client": "^0.15.8",
    "@web-scraper/common": "*",
    "@web-scraper/core": "*",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.1",
    "fastify": "^5.3.3",
    "fastify-plugin": "^5.0.1",
    "fastify-sse-v2": "^4.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "node-file-dialog": "^1.0.3",
    "pino": "^9.7.0",
    "zod": "^3.25.49"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^22.15.29",
    "drizzle-erd": "^0.0.1-alpha.11",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vitest": "^3.2.0"
  }
}
