{
  "name": "@web-scraper/backend",
  "version": "3.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "build:standalone": "node build.mjs",
    "dev": "tsx --watch src/main.ts | pino-pretty --colorize",
    "start": "node dist/main.js",
    "lint": "eslint \"src/**/*{.ts,.tsx}\" --fix",
    "typecheck": "tsc --noEmit --skipLibCheck -p ./tsconfig.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:generate-erd": "drizzle-erd --in ./src/db/schema/index.ts --out ERD.svg",
    "db:reset": "rm -rf data.db && npm run db:generate && npm run db:migrate && npm run db:generate-erd",
    "db:reset:seed": "npm run db:reset && tsx src/db/seed/auto-seed.ts",
    "db:show": "drizzle-kit studio"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.2.0",
    "@libsql/client": "^0.15.9",
    "@web-scraper/common": "*",
    "@web-scraper/core": "*",
    "args": "^5.0.3",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-sse-v2": "^4.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "fastify-zod-query-coercion": "^1.0.0",
    "node-file-dialog": "^1.0.3",
    "node-systray-v2": "github:Edgar-P-yan/node-systray-v2",
    "pino": "^9.7.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/args": "^5.0.3",
    "@types/node": "^24.0.3",
    "drizzle-erd": "^0.0.1-alpha.11",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  }
}
